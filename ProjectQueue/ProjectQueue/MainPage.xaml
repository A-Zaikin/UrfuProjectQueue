<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectQueue.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="URFU Project Queue" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label 
            Text="{Binding DebugLabel}"
            IsVisible="False"/>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Entry 
                VerticalOptions="Center"
                x:Name="entry"
                Text="https://docs.google.com/spreadsheets/d/1LZU6GiXYLOFSbL5ZqImKqNYzYhWiueqONTh__dop4zI/edit#gid=2095115966"
                Completed="EntryCompleted"
                IsVisible="True"/>
            <Picker
                x:Name="teamPicker"
                SelectedIndexChanged="TeamPickerSelectedIndexChanged"
                IsVisible="False"/>

            <Button 
                x:Name="unsubscribeButton"
                Text="Unsubscribe"
                Pressed="UnsubscribeButtonPressed"
                IsVisible="False"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
